<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    android:background="#ffffff"
    card_view:cardCornerRadius="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customernametext"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customertypeText"
                android:text="Customer Type : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customerTypeDisplay"
                android:text="name here"
                android:layout_toRightOf="@+id/customertypeText"
                />
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customernameText"
                android:text="Customer Name : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/customernamedisplay"
                android:text="email here"
                android:layout_toRightOf="@+id/customernameText"
                />
        </RelativeLayout>


        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateofconntext"
                android:text="Date of Connection : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateofconnDisplay"
                android:text="empid here"
                android:layout_toRightOf="@+id/dateofconntext"
                />

        </RelativeLayout>


        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connectedbytext"
                android:text="Connected by : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connectedbydisplay"
                android:text="password here"
                android:layout_toRightOf="@+id/connectedbytext"
                />

        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/initialanouttext"
                android:text="Initial Amount : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/initialanoutdisplay"
                android:text="name here"
                android:layout_toRightOf="@+id/initialanouttext"/>

        </RelativeLayout>



        <RelativeLayout
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressText"
                android:text="Address : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressTextdisplay"
                android:text="name here"
                android:layout_toRightOf="@+id/addressText"
                />

        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>





