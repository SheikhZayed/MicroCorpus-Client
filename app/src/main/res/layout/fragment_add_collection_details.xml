<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.ashif.microcorpusclient.fragments.AddCollectionFragment">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/add_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:text="Add Collection Details"
                android:textSize="30sp"
                android:typeface="serif" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Customer ID"
                android:inputType="text"
                android:id="@+id/textCollectionID"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Employee ID"
                android:enabled="false"
                android:inputType="text"
                android:id="@+id/textConnectionID"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Collection Amount"
                android:inputType="number"
                android:id="@+id/textCollectionAmount"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Date of Collection(dd/mm/yy)"
                android:id="@+id/textCollectionDatePicker"
                android:inputType="date" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Submit"
                android:id="@+id/btnsubmit"
                android:textColor="#fff" />
        </LinearLayout>


</FrameLayout>
